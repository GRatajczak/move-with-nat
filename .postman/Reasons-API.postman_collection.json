      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"code\": \"injury\",\n  \"label\": \"Injury or pain\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/reasons",
          "host": ["{{base_url}}"],
          "path": ["api", "reasons"]

        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    const response = pm.response.json();",
              "    pm.environment.set(\"reason_id\", response.id);",
              "    console.log(\"Reason ID saved:\", response.id);",
              "}"
            ],
            "type": "text/javascript"

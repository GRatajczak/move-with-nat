---
import TrainerLayout from "../../../layouts/TrainerLayout.astro";
import { PlansListPage } from "../../../components/plans/PlansListPage";

// Check authorization in middleware
const { locals } = Astro;
const user = locals.user;

if (!user || user.role !== "trainer") {
  return Astro.redirect("/");
}
---

<TrainerLayout>
  <PlansListPage client:load userRole="trainer" userId={user.id} />
</TrainerLayout>

---
import TrainerLayout from "../../../layouts/TrainerLayout.astro";
import { ClientDetailPage } from "../../../components/trainer/clients/ClientDetailPage";

const { id, role } = Astro.params;

if (!id || role !== "trainer") {
  return Astro.redirect("/");
}
---

<TrainerLayout title="Szczegóły podopiecznego">
  <ClientDetailPage clientId={id} client:load />
</TrainerLayout>
